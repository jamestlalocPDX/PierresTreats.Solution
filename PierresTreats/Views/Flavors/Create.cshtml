@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor

<h4>Add a new Flavor</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name, new { @class="mdl-textfield__label" })
    @Html.TextBoxFor(model => model.Name, new { @class="mdl-textfield__input", @required="true"  })

    @Html.Label("Select Treat")
    @Html.DropDownList("TreatId")

    <input type="submit" value="Add new Flavor" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all Flavors", "Index")</p>